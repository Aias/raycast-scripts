{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": ["ES2022"],
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": ["node"],
		"allowJs": true,
		"noEmit": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true
	},
	"exclude": ["node_modules", "dist", "scripts"]
}
