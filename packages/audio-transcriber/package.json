{
	"name": "audio-transcriber",
	"version": "1.0.0",
	"description": "Audio transcription and summarization using Deepgram and OpenAI",
	"type": "module",
	"main": "index.ts",
	"scripts": {
		"start": "bun run index.ts",
		"dev": "bun run --watch index.ts",
		"transcribe": "bun run transcribe-only.ts",
		"clean": "bun run clean-transcript.ts",
		"summarize": "bun run summarize-only.ts",
		"lint": "eslint . --fix",
		"lint:check": "eslint .",
		"format": "prettier --write \"**/*.{ts,json,md}\"",
		"format:check": "prettier --check \"**/*.{ts,json,md}\"",
		"typecheck": "tsc --noEmit",
		"check": "bun run format && bun run typecheck && bun run lint:check"
	},
	"keywords": [
		"audio",
		"transcription",
		"deepgram",
		"openai",
		"summarization",
		"bun",
		"typescript"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"assemblyai": "^4.22.1",
		"dotenv": "^17.2.3",
		"ffmpeg-static": "^5.3.0",
		"fluent-ffmpeg": "^2.1.3",
		"openai": "^6.16.0",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@types/fluent-ffmpeg": "^2.1.28",
		"bun-types": "^1.3.6"
	}
}
