{
  "name": "audio-transcriber",
  "version": "1.0.0",
  "description": "Audio transcription and summarization using Deepgram and OpenAI",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun run --watch index.ts",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "typecheck": "tsc --noEmit",
    "check": "bun run typecheck && bun run lint:check && bun run format:check"
  },
  "keywords": [
    "audio",
    "transcription",
    "deepgram",
    "openai",
    "summarization",
    "bun",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "assemblyai": "^4.0.0",
    "dotenv": "^16.5.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "openai": "^5.3.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "bun-types": "^1.2.15",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
}
